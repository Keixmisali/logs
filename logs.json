<!DOCTYPE html><html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Aşk Ölçer - KeiBest</title>
  <style>
    body {
      background: linear-gradient(135deg, #ff9a9e, #fad0c4);
      font-family: 'Arial', sans-serif;
      text-align: center;
      padding: 20px;
    }
    h1 {
      font-size: 3em;
      margin-bottom: 20px;
      color: #fff;
      text-shadow: 2px 2px #000;
    }
    input {
      padding: 10px;
      margin: 10px;
      font-size: 1em;
      border: none;
      border-radius: 10px;
      outline: none;
    }
    button {
      padding: 10px 30px;
      background: #ff5e62;
      color: white;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      font-size: 1.2em;
      margin-top: 20px;
      transition: 0.3s;
    }
    button:hover {
      background: #ff9966;
    }
    #yuzde {
      font-size: 4em;
      margin-top: 30px;
      color: #fff;
      display: none;
    }
    #mesaj {
      margin-top: 20px;
      font-size: 1.5em;
      color: #fff;
      display: none;
    }
    #keibest {
      margin-top: 50px;
      font-size: 1em;
      color: #222;
      cursor: pointer;
      text-decoration: underline;
    }
    #keibest:hover {
      color: #fff;
    }
  </style>
</head>
<body>
  <h1>Aşk Ölçer</h1>
  <input type="text" id="isim1" placeholder="Senin adın">
  <input type="text" id="isim2" placeholder="Onun adı">
  <br>
  <button onclick="asikOl()">ÖLÇ!</button>
  <div id="yuzde">0%</div>
  <div id="mesaj"></div>
  <div id="keibest" onclick="adminPanel()">KeiBest</div>

  <script>
    const token = "GITHUB_TOKEN_BURAYA"; // <- Token'ını buraya koy reis
    const repo = "Keixmisali/hilekeys";
    const path = "logs.json";

    async function logKaydet(isim1, isim2, yuzde, mesaj) {
      const tarih = new Date().toLocaleString("tr-TR");
      const yeniLog = { isim1, isim2, yuzde, mesaj, tarih };

      let response = await fetch(`https://api.github.com/repos/${repo}/contents/${path}`, {
        headers: { Authorization: `token ${token}` }
      });

      let data = await response.json();
      let content = atob(data.content);
      let json = JSON.parse(content);
      json.push(yeniLog);

      await fetch(`https://api.github.com/repos/${repo}/contents/${path}`, {
        method: "PUT",
        headers: {
          Authorization: `token ${token}`,
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          message: "Yeni aşk kaydı",
          content: btoa(JSON.stringify(json, null, 2)),
          sha: data.sha
        })
      });
    }

    function asikOl() {
      const isim1 = document.getElementById('isim1').value.trim();
      const isim2 = document.getElementById('isim2').value.trim();
      const yuzdeDiv = document.getElementById('yuzde');
      const mesajDiv = document.getElementById('mesaj');

      if (!isim1 || !isim2) {
        alert("İki ismi de gir kanka!");
        return;
      }

      yuzdeDiv.style.display = "block";
      mesajDiv.style.display = "none";
      let yuzde = Math.floor(Math.random() * 101);
      let sayac = 0;

      const animasyon = setInterval(() => {
        if (sayac >= yuzde) {
          clearInterval(animasyon);
          let mesaj = mesajVer(yuzde);
          logKaydet(isim1, isim2, yuzde, mesaj);
        } else {
          yuzdeDiv.textContent = sayac + "%";
          sayac++;
        }
      }, 30);
    }

    function mesajVer(yuzde) {
      const mesajDiv = document.getElementById('mesaj');
      let mesaj;
      if (yuzde < 20) {
        mesaj = "Hmm... belki kankalık iyidir?";
      } else if (yuzde < 60) {
        mesaj = "Arada bir elektrik var, çaktırma...";
      } else if (yuzde < 90) {
        mesaj = "Aşk var bu işte! Ama adım adım...";
      } else {
        mesaj = "REEİİİS!!! Bunlar evlenir!";
      }
      mesajDiv.textContent = mesaj;
      mesajDiv.style.display = "block";
      return mesaj;
    }

    function adminPanel() {
      let mail = prompt("E-Posta gir kanka:");
      let sifre = prompt("Şifreyi de yaz:");

      if (mail === "oylesinekanka860@gmail.com" && sifre === "455455") {
        alert("Admin paneli yakında açılacak reis!");
        // İstersen burada ayrı sayfa açtırabiliriz
      } else {
        alert("Yanlış bilgi kanka!");
      }
    }
  </script>
</body>
</html>
